<section class="section__testimonials" data-section-id="{{ section.id }}" data-section-type="quotes">
    <div class="container--slim section--shortest bg--pink">

        <div class="persistent-grid--md grid--2-col">

            <h2><span>Customer</span> Reviews</h2>
            <a href="/pages/reviews" class="btn--tertiary small--hide">See More Reviews</a>

        </div>


        <div class="quotes-wrapper" data-slider>
          <div class="quotes-slider-wrapper" data-slider-container>
            <div class="quotes-slider" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}" data-slider-track>
              {% for block in section.blocks %}
                <div id="slickSlide{{ block.id }}"
                  class="quotes-slide quotes-slide--single quotes-slide--single"
                  aria-labelledby="slickDot{{ block.id }}"
                  {{ block.shopify_attributes }}
                  data-slider-slide-index="{{ forloop.index0 }}"
                  data-slider-item>

                  <div class="quotes-slider__text grid--2-col">
                      <div class="testimonial__image">
                          {% if block.settings.image != blank %}

                              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1' -%}
                              <img src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900]" data-sizes="auto" alt="{{ block.settings.image.alt | escape }}">

                          {% endif %}
                      </div>

                      <div class="testimonial__quote">
                          <blockquote>

                            {% if block.settings.intro != blank %}
                                {{ block.settings.intro }}
                            {% endif %}
                            {% if block.settings.quote != blank %}
                                {{ block.settings.quote }}
                            {% endif %}
                            {% if block.settings.author != blank %}
                                <cite>{{ block.settings.author | escape }}</cite>
                            {% endif %}

                        </blockquote>
                    </div>

                  </div>
                </div>
              {% endfor %}

              <!-- <button type="button" data-role="none" class="slick-prev slick-arrow" aria-label="Previous" role="button" style="display: block;">Previous</button>
              <button type="button" data-role="none" class="slick-next slick-arrow" aria-label="Next" role="button" style="display: block;">Next</button> -->

            </div>
          </div>

          {% if section.blocks.size > 1 %}
            <ul class="slick-dots" data-slider-indicators>
              {%- for block in section.blocks -%}
                <li{% if forloop.first %} class="slick-active"{% endif %} data-slider-indicator>
                  <button id="slickDot{{ block.id }}"
                    aria-label="{{ 'sections.slideshow.load_slide' | t: slide_number: forloop.index }}"
                    data-slide-number="{{ forloop.index0 }}"
                    aria-controls="slickSlide{{ block.id }}"></button>
                </li>
              {%- endfor -%}
            </ul>
          {% endif %}
        </div>

        <p class="small--show text-center"><a href="/pages/reviews" class="btn--primary">See More Reviews</a></p>

    </div>
</section>



{% schema %}
{
  "name": {
    "en": "Testimonials",
    "es": "Testimonios"
  },
  "class": "index-section",
  "max_blocks": 9,
  "blocks": [
    {
      "type": "quote",
      "name": {
        "en": "Testimonial",
        "es": "Testimonio"
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
              "en": "Image",
              "es": "Imagen"
          }
        },
        {
          "type": "richtext",
          "id": "intro",
          "label": {
            "en": "Lead-in",
            "es": "hacer entrar a"
          },
          "default": {
            "en": "<p>Feature part of the Testimonial here.</p>",
            "es": "<p>Destaca parte del testimonio aquí.</p>"
          }
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": {
            "en": "Text",
            "es": "Texto"
          },
          "default": {
            "en": "<p>Add customer reviews and testimonials to showcase your store’s happy customers.</p>",
            "es": "<p>Agrega las reseñas y los testimonios de los clientes para mostrar a los clientes satisfechos de tu tienda.</p>"
          }
        },
        {
          "type": "text",
          "id": "author",
          "label": {
            "en": "Author",
            "es": "Autor"
          },
          "default": {
            "en": "Author's name",
            "es": "Nombre del autor"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Testimonials",
        "es": "Testimonios"
      },
      "category": {
        "en": "Text",
        "es": "Texto"
      },
      "blocks": [
        {
          "type": "quote"
        },
        {
          "type": "quote"
        },
        {
          "type": "quote"
        }
      ]
    }
  ]
}
{% endschema %}
