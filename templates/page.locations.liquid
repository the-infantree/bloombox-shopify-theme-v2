<header class="collection-header hero__image--top">
  {%- include 'hero-image', hero_image_fallback: 'About_2020_BloomBox_264.jpg' -%}
</header>

<div class="page__intro-container container container--wide">
    <span class="collection__dog-ear" role="presentation"></span>
    <div class="page__intro">

        <h1>{{ page.title }}</h1>
        <p class="text--intro">{{ page.content }}</p>

    </div>
</div>



<div class="bg--white">
    <div class="container">

		{% assign mapImg = page.metafields.locations.location_map %}
        <img src="{{ mapImg }}" alt="Map of BloomBox Delivery Areas" />

    </div>
</div> <!-- / End White BG -->
<div class="bg--pink section--tall bg--pattern-bottom">
    <!-- 2 columns -->
    <div class="container--wide grid--40-60">
        <div>

			{{ page.metafields.locations.left_locations_content }}

        </div>
        <div>
            <div class="grid--3-col">
				{% assign totalLocations = page.metafields.locations.state_name.size %}
				{% assign oneLess = totalLocations | minus: 1 %}

				{% for state in page.metafields.locations.state_name %}
					{% assign mod = forloop.index | modulo: 3 %}
					{% assign count = forloop.index %}
					{% assign locations = page.metafields.locations.listed_cities[forloop.index0] | split: ", " %}

					{% if mod == 1 %}
						<div>
					{% endif %}

					<h3 class="h4 no-margin--btm">{{ state }}</h3>
					<ul class="list__screen-reader" style="margin-bottom:1rem;">
						{% for loc in locations %}
							<li>{{ loc }}</li>
						{% endfor %}
					</ul>
					
					{% if mod == 0 %}
						</div>
					{% elsif count == oneLess %}
						</div><div>
					{% endif %}
				{% endfor %}
            </div>


            <!-- Zip Code Accordion -->
            <ul class="accordion" data-aria-accordion data-multi data-transition data-default="none">
                <li>
                    <h3 class="accordion__heading" data-aria-accordion-heading>
						{{ page.metafields.locations.accordion_headline }}
                    </h3>
                    <div class="accordion__panel" data-aria-accordion-panel>

						{{ page.metafields.locations.accordion_brief }}

						{% for service in page.metafields.locations.serviceable_location_name %}
                            {% assign zipcodes = collections[page.metafields.locations.serviceable_location_zipcodes[forloop.index0]].metafields.accentuate.zip_codes.zipcodes %}
                        	<h4>{{ service }}</h4>							

							<ul class="list__zip-codes">	
								{% for zip in zipcodes %}
									<li>{{ zip }}</li>
								{% endfor %}
							</ul>

						{% endfor %}

						{{ page.metafields.locations.accordion_footer }}

                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- / 2 columns -->
</div> <!-- / End Pink BG -->

<div id="area-alerts" class="container--wide section--short where-we-are__alerts-form">
    <div class="where-we-are__alerts-intro text-center">
        {{ page.metafields.locations.form_content_details }}
    </div>

    <!-- Begin Mailchimp Signup Form -->
    <div id="mc_embed_signup">
        <form action="https://getblooming.us13.list-manage.com/subscribe/post?u=c50ee0e69c184d7690f8dcd79&amp;id=d7f4b8b0e2" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">

            <div class="grid--3-col">
                <div class="mc-field-group">
                	<label for="mce-EMAIL">Email Address <span class="asterisk">*</span>
                </label>
                	<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
                </div>
                <div class="mc-field-group">
                	<label for="mce-FNAME">Name </label>
                	<input type="text" value="" name="FNAME" class="" id="mce-FNAME">
                </div>
                <div class="mc-field-group">
                	<label for="mce-MMERGE2">Zip Code <span class="asterisk">*</span></label>
                	<input type="text" value="" name="MMERGE2" class="required" id="mce-MMERGE2">
                </div>
            </div>


        	<div id="mce-responses" class="clear">
        		<div class="response" id="mce-error-response" style="display:none"></div>
        		<div class="response" id="mce-success-response" style="display:none"></div>
        	</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_c50ee0e69c184d7690f8dcd79_d7f4b8b0e2" tabindex="-1" value=""></div>
            <div class="text-center">
                <input type="submit" value="Let Me Know!" name="subscribe" id="mc-embedded-subscribe" class="btn--primary small" style="width:auto;">
            </div>
            </div>
        </form>
    </div>
    <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script><script type='text/javascript'>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='MMERGE2';ftypes[2]='zip';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
    <!--End mc_embed_signup-->

</div>
