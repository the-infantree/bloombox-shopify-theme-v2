<header class="collection-header">
    <div class="hero">

        <img
            class="hero__image--img-tag"
            alt="{{ preview_image.alt }}"
            data-src="{{ file_img_url }}"
            srcset="
            {{ 'Natives_2020_BloomBox_Greenhouse_032.jpg' | file_img_url: '540x', format: 'jpg' }} 540w,
            {{ 'Natives_2020_BloomBox_Greenhouse_032.jpg' | file_img_url: '820x', format: 'jpg' }} 820w,
            {{ 'Natives_2020_BloomBox_Greenhouse_032.jpg' | file_img_url: '1200x', format: 'jpg' }} 1200w,
            {{ 'Natives_2020_BloomBox_Greenhouse_032.jpg' | file_img_url: '1600x', format: 'jpg' }} 1600w"
            sizes="(min-width: 960px) 1200px, (min-width: 720px) 820px, (max-width: 500px) 540px, 100vw"
            data-image>
    </div>
</header>

<div class="page__intro-container container container--wide">
    <span class="collection__dog-ear" role="presentation"></span>
    <div class="page__intro">

        <h1>{{ page.title }}</h1>
        {{ page.content }}
        
    </div>
</div>

<div class="container">
    <!-- 2 columns -->
    <div class="grid--2-col section--short vertical-align">
        <div class="image__pattern-left">
            {% assign imageUrl = page.metafields.two_column_content.column_image_selection %}
            <img src="{{ imageUrl }}" alt="open top BloomBox box full of native plants" />

        </div>
        <div>
            {{ page.metafields.two_column_content.column_main_content }}
        </div>
    </div>
    <!-- / 2 columns -->
</div>

<div class="container--wide">
    <blockquote class="blockquote--thriller">
        <div class="blockquote__image">
            {% assign blockImage = page.metafields.blockquote.blockquote_image %}
            <img src="{{ blockImage }}" alt="Hand-selecting flowers from local greenhouse" />
        </div>

        {{ page.metafields.blockquote.blockquote_headline }}

    </blockquote>
</div>

{% if page.metafields.accentuate.condensed_content_module %}
<div class="container--skinnier">
    {{ page.metafields.accentuate.condensed_content_module }}
</div>
{% endif %}

{% if page.metafields.accentuate.condensed_content_med_module %}
<div class="container--skinny section--shorter text-center">

    {{ page.metafields.accentuate.condensed_content_med_module }}

    {% if page.metafields.accentuate.enable_flower_icon %}
        {% include 'icon-flowers' %}
    {% endif %}

    {% if page.metafields.accentuate.image_display %}
        {% assign moduleImg = page.metafields.accentuate.image_display %}
        <img src="{{ moduleImg }}" alt="Chase & Dave Signatures" width="325" height="99" /><br />
        <cite>{{ page.metafields.accentuate.content_cite }}</cite>
    {% endif %}
</div>
{% endif %}
